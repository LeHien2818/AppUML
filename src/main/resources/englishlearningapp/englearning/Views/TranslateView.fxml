<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="englishlearningapp.englearning.Controller.TranslateViewController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true">
            <image>
                <Image url="@../src/image/Back.png" />
            </image>
        </ImageView>
        <Pane prefHeight="106.0" prefWidth="900.0">
            <children>
            <ImageView fitHeight="63.0" fitWidth="638.0" layoutX="253.0" layoutY="46.0" opacity="0.25" pickOnBounds="true">
               <image>
                  <Image url="@../src/image/MoonPurple.png" />
               </image>
            </ImageView>
                <Button fx:id="searchBtn" layoutX="254.0" layoutY="46.0" mnemonicParsing="false" onAction="#clickSearch" prefHeight="63.0" prefWidth="175.0" styleClass="classBtn" text="Search" textFill="WHITE">
                    <font>
                        <Font name="Eras Bold ITC" size="24.0" />
                    </font></Button>
                <Button fx:id="gameBtn" layoutX="492.0" layoutY="46.0" mnemonicParsing="false" onAction="#clickGame" prefHeight="63.0" prefWidth="175.0" styleClass="classBtn" text="Game" textFill="WHITE">
                    <font>
                        <Font name="Eras Bold ITC" size="24.0" />
                    </font></Button>
                <Button fx:id="translateBtn" layoutX="724.0" layoutY="46.0" mnemonicParsing="false" prefHeight="63.0" prefWidth="166.0" styleClass="classBtn" text="Translate" textFill="WHITE">
                    <font>
                        <Font name="Eras Bold ITC" size="24.0" />
                    </font></Button>
            </children>
        </Pane>
      <Pane layoutX="151.0" layoutY="145.0" prefHeight="414.0" prefWidth="739.0">
         <children>
            <Button fx:id="switchBtn" layoutX="377.0" layoutY="79.0" mnemonicParsing="false" onAction="#switchLanguage" prefHeight="69.0" prefWidth="92.0" text="Switch Language" />
            <TextArea fx:id="inputText" layoutX="102.0" layoutY="79.0" prefHeight="221.0" prefWidth="249.0" styleClass="textBox" />
            <TextArea fx:id="outputText" editable="false" layoutX="486.0" layoutY="79.0" prefHeight="221.0" prefWidth="249.0" styleClass="textBox">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></TextArea>
            <Button layoutX="321.0" layoutY="336.0" mnemonicParsing="false" onAction="#onTranslate" prefHeight="50.0" prefWidth="187.0" text="Translate" />
            <TextArea fx:id="inputLang" editable="false" layoutX="102.0" layoutY="21.0" prefHeight="43.0" prefWidth="175.0" />
            <TextArea fx:id="outputLang" editable="false" layoutX="486.0" layoutY="21.0" prefHeight="43.0" prefWidth="175.0" />
         </children>
      </Pane>
    </children>
</AnchorPane>
